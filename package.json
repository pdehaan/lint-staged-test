{
  "name": "lint-staged-test",
  "description": "Testing lint-staged and husky for precommit hook based linting goodness.",
  "version": "1.0.0",
  "author": "Peter deHaan <peter@deseloper.com> (https://about.me/peterdehaan)",
  "bugs": {
    "url": "https://github.com/pdehaan/lint-staged-test/issues"
  },
  "devDependencies": {
    "eslint": "5.3.0",
    "eslint-config-prettier": "3.0.1",
    "eslint-plugin-json": "1.2.1",
    "eslint-plugin-prettier": "2.6.2",
    "husky": "0.14.3",
    "lint-staged": "7.2.2",
    "markdown-spellcheck": "1.3.1",
    "markdownlint-cli": "0.13.0",
    "npm-run-all": "4.1.3",
    "prettier": "1.14.2",
    "prettier-eslint-cli": "4.7.1"
  },
  "homepage": "https://github.com/pdehaan/lint-staged-test#readme",
  "keywords": [],
  "license": "MPL-2.0",
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "git add"
    ],
    "*.json": [
      "prettier-eslint --write",
      "git add"
    ],
    "*.md": [
      "mdspell -a -n -r -x --en-us",
      "prettier --write",
      "git add"
    ]
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pdehaan/lint-staged-test.git"
  },
  "scripts": {
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint . --ext=js,json",
    "lint:md": "markdownlint *.md",
    "lint:md:spell": "mdspell -a -n -x --en-us *.md",
    "precommit": "lint-staged",
    "test": "echo \"Error: no test specified\" && exit 1"
  }
}
